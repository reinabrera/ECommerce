@model IEnumerable<ECommerce2.Models.AttributeModel>

@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = DashboardPages.Attributes;
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}
<div>
    <h1>Attributes</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Terms)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @if (item.Terms.Any())
                        {
                            string commaSeparted = string.Join(", ", item.Terms.Select(t => t.Name));
                            @Html.Raw(commaSeparted + "...")
                        }
                        <a asp-action="Edit" asp-route-id="@item.Id">Configure terms</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

