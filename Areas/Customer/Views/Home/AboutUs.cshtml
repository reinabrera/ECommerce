@model List<ECommerce2.Models.TeamMember>

@{ 
    ViewData["CustomNavbarClass"] = "bg-translucent";
}

<section class="about-us-hero">
    <div class="content d-flex justify-content-center align-items-center h-100 w-100">
        <h1 class="text-light display-2 fw-600">About Us</h1>
    </div>
</section>

<section class="who-we-are">
    <div class="container-fluid container-lg">
        <div class="content">
            <div class="row gx-0">
                <div class="col-12 col-lg-6">
                    <div class="bg-white inner-content--wrapper">
                        <div class="content-text">
                            <div class="custom-divider d-flex">
                                <span></span>
                            </div>
                            <h2 class="fs-1 mt-4">Who We Are</h2>
                            <p class="mt-4">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo. Nam nec tellus a odio tincidunt auctor a ornare odio. Sed non mauris vitae erat consequat auctor eu in elit.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 bg-image" style="background-image: url('../../dist/slide-image-free-img.jpg');">
                    <img src="~/dist/slide-image-free-img.jpg" class="d-lg-none w-100" />
                </div>
            </div>
        </div>
    </div>
    
</section>

<section id="our-team" class="py-100">
    <div class="container-fluid container-lg">
        <div class="content">
            <div class="custom-divider justify-content-center d-flex">
                <span></span>
            </div>
            <div class="text-content text-center">
                <div class="mt-3">
                    <span class="fw-600 fs-5">
                        A Few Words About
                    </span>
                </div>
                <h2 class="mt-3 fs-1">Our Team</h2>
                <p class="mt-3">
                    Nam nec tellus a odio tincidunt auctor a ornare odio. Sed non mauris vitae erat consequat auctor eu in elit. Class aptent taciti sociosqu ad litora torquent per conubia nostra.
                </p>
            </div>
            
            <div class="team-members row g-3 mt-5">
                
                @foreach (var item in @Model)
                {
                    <div class="col-12 col-md-4">
                        <div class="px-3 px-lg-5 py-4 d-flex justify-content-center align-items-center flex-column member-content rounded border">
                            <div class="img--wrapper mb-4">
                                <img src="@item.Image!.FilePath" alt="@item.Name Photo" />
                            </div>
                            <h5>
                                @item.Name
                            </h5>
                            <div>
                                <span>@item.Position</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<section id="socials">
    <div class="container">
        <div class="content-wrapper p-md-0">
            <div class="content text-center">
                <div class="custom-divider justify-content-center d-flex">
                    <span></span>
                </div>
                <h4 class="fs-1 mt-4 fw-600">Follow Us</h4>
                <div class="row gx-5 justify-content-center mt-5">
                    <div class="col-auto">
                        <a href="#" class="text-decoration-none text-dark">
                            <i class="bi bi-facebook"></i>
                        </a>
                    </div>
                    <div class="col-auto">
                        <a href="#" class="text-decoration-none text-dark">
                            <i class="bi bi-twitter-x"></i>
                        </a>
                    </div>
                    <div class="col-auto">
                        <a href="#" class="text-decoration-none text-dark">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                    <div class="col-auto">
                        <a href="#" class="text-decoration-none text-dark">
                            <i class="bi bi-google"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
        

    </div>

</section>


@Html.Partial("_SectionHighlights", "--global-white")